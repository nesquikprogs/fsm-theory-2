<Window x:Class="BankAccountStateMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Банковский счёт" Height="884" Width="508"
        WindowStartupLocation="CenterScreen" Background="WhiteSmoke">

    <StackPanel Margin="20" HorizontalAlignment="Center">

        <!-- Заголовок -->
        <TextBlock Text="Система управления банковским счётом"
                   FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Информация о состоянии -->
        <TextBlock Text="Текущее состояние:" FontWeight="Bold" FontSize="16" 
                   Margin="0,15,0,5" HorizontalAlignment="Center"/>
        <TextBlock x:Name="CurrentStateText" Text="Счёт закрыт"
                   FontSize="18" Foreground="Blue" HorizontalAlignment="Center"/>

        <TextBlock Text="Баланс:" FontWeight="Bold" FontSize="16" 
                   Margin="0,10,0,5" HorizontalAlignment="Center"/>
        <TextBlock x:Name="BalanceText" Text="0 руб."
                   FontSize="18" HorizontalAlignment="Center"/>

        <!-- Управление счётом -->
        <Separator Margin="0,15"/>
        <TextBlock Text="Управление счётом" FontWeight="Bold" FontSize="16"
                   HorizontalAlignment="Center" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OpenAccountBtn" Content="Открыть счёт"
                    Width="150" Height="35" Margin="5"
                    Click="OpenAccountBtn_Click"/>
            <Button x:Name="CloseAccountBtn" Content="Закрыть счёт"
                    Width="150" Height="35" Margin="5"
                    Click="CloseAccountBtn_Click"/>
        </StackPanel>

        <!-- Вклад и снятие -->
        <Separator Margin="0,15"/>
        <TextBlock Text="Операции с деньгами" FontWeight="Bold" FontSize="16"
                   HorizontalAlignment="Center" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Сумма вклада:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="DepositAmountBox" Text="500" Width="100" Height="25" Margin="5"/>
            <Button x:Name="DepositBtn" Content="Внести"
                    Width="120" Height="35" Margin="5"
                    Click="DepositBtn_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Сумма снятия:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="WithdrawAmountBox" Text="100" Width="100" Height="25" Margin="5"/>
            <Button x:Name="WithdrawBtn" Content="Снять"
                    Width="120" Height="35" Margin="5"
                    Click="WithdrawBtn_Click"/>
        </StackPanel>

        <!-- Дополнительные действия -->
        <Separator Margin="0,15"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="RepayDebtBtn" Content="Погасить долг"
                    Width="150" Height="35" Margin="5"
                    Click="RepayDebtBtn_Click"/>
            <CheckBox x:Name="AllowOverdraftCheckBox"
                      Content="Разрешить овердрафт"
                      Margin="15,0"
                      Checked="AllowOverdraftCheckBox_Changed"
                      Unchecked="AllowOverdraftCheckBox_Changed"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- История операций (в самом низу) -->
        <Separator Margin="0,20"/>
        <TextBlock Text="История операций" FontWeight="Bold" FontSize="16"
                   HorizontalAlignment="Center" Margin="0,5"/>
        <Border Background="White" BorderBrush="Gray" BorderThickness="1"
                CornerRadius="5" Margin="0,10" Padding="10">
            <ListBox x:Name="HistoryListBox" Height="180" Width="700" FontSize="14"/>
        </Border>

    </StackPanel>
</Window>
